// Regenerate

function regenerateTip(category) {
    const desc = document.querySelector(`#${category}-card .desc`);
    const img = document.querySelector(`#${category}-card .image img`);
    desc.innerText = '';
    desc.classList.add('loading');

    fetch(`/generateTip/${category}`)
        .then(response => response.json())
        .then(data => {
            desc.classList.remove('loading');
            
            // Update the image and tip text with either the actual data or the fallback data
            if (data.imageUrl) {
                img.src = data.imageUrl;
            }
            
            if (data.tipText) {
                desc.innerText = `Tip: ${data.tipText}`;
            }
            
            // If there was an error, log it but we still displayed the fallback content
            if (data.error) {
                console.warn(`API Error: ${data.error}`);
            }
            
            // Use the global locomotiveScroll instance
            if (window.locomotiveScroll && typeof window.locomotiveScroll.update === 'function') {
                try {
                    window.locomotiveScroll.update();
                } catch (scrollError) {
                    console.warn('Error updating scroll:', scrollError);
                }
            }
        })
        .catch(error => {
            console.error('Network Error:', error);
            desc.classList.remove('loading');
            desc.innerText = "Connection error. Please try again later.";
        });
}

